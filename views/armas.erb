<table id='table-2'>
	<thead>
		<tr>
			<th>ID</th>
			<th>Icono</th>
			<th>Nombre</th>
			<th>Ataque</th>
		</tr>	
	</thead>
	<tbody>
		<% armas.each do |a| %>
			<tr>
				<td><%= a[:id] %></td>
				<td>
					<% img_path = "'../images/armas/#{a[:name]}.png'" %>
					<img src=<%=img_path%> alt=<%=a[:name]%>, id='icon' />
				</td>
				<td><%= a[:name].capitalize %></td>
				<td><%= a[:powa] %></td>
			</tr>
		<% end %>
	</tbody>
</table>