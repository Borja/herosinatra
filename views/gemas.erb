<h1><center>Lista de Gemas</center></h1>
<a href=/>√çndice</a><br><br>

<table id='table-2'>
	<tbody>
		<tr>
			<% 3.times do |i| %>
				<td>
					<center><h2><%= gema_calidad(i+1)%></h2></center>
					<table id='table-2'>
						<thead>
							<tr>
								<th>ID</th>
								<th>Icono</th>
								<th>Nombre</th>
							</tr>	
						</thead>
						<tbody>
							<% gemas.each do |g| %>
								<% if g[:calidad] == (i+1) %>
									<tr>
										<td><%= g[:id] %></td>
										<td>
											<% img_path = "'../images/treasures/gemas/#{g[:name]}.png'" %>
											<img src=<%=img_path%> alt=<%=g[:name]%>, id='icon' />
										</td>
										<td><%= g[:name].capitalize %></td>
									</tr>
								<% end%>
							<% end %>
						</tbody>
					</table>
					<br>
				</td>	
			<% end%>
		</tr>
	</tbody>
</table>
